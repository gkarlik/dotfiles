// Place your settings in this file to overwrite the default settings
{
    "security.workspace.trust.enabled": false,
    "breadcrumbs.enabled": true,
    "debug.inlineValues": "on",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 16,
    "editor.suggestFontSize": 0,
    "editor.glyphMargin": true,
    "editor.renderLineHighlight": "all",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": true,
    "editor.dragAndDrop": true,
    "editor.inlayHints.enabled": "on",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        100
    ],
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.suggest.showStatusBar": true,
    "editor.suggest.insertMode": "replace",
    "editor.scrollBeyondLastLine": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "explorer.confirmDelete": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "explorer.openEditors.visible": 0,
    "extensions.ignoreRecommendations": true,
    "files.defaultLanguage": "${activeEditorLanguage}",
    "files.simpleDialog.enable": true,
    "files.exclude": {
        "**/.dart_tool": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.packages": true,
        "**/.svn": true,
        "**/bin/": false,
        "**/node_modules/": true,
        "**/obj/": true,
        "**/project.lock.json": true,
        "**/publish/": true
    },
    "problems.decorations.enabled": false,
    "search.exclude": {
        //"**/build/": true,
        "**/template/": true
    },
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "terminal.integrated.fontSize": 18,
    "window.openFilesInNewWindow": "off",
    "window.titleBarStyle": "custom",
    "workbench.editor.openSideBySideDirection": "right",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 8,
    // golang
    "go.buildOnSave": "off",
    "go.lintOnSave": "workspace",
    "go.lintTool": "golint",
    "go.vetOnSave": "workspace",
    "go.buildFlags": [],
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.coverOnSave": true,
    "go.coverOnSingleTest": true,
    "go.coverOnSingleTestFile": true,
    "go.coverageDecorator": {
        "type": "gutter",
        "coveredHighlightColor": "rgba(64,128,128,0.5)",
        "uncoveredHighlightColor": "rgba(128,64,64,0.25)",
        "coveredBorderColor": "rgba(64,128,128,0.5)",
        "uncoveredBorderColor": "rgba(128,64,64,0.25)",
        "coveredGutterStyle": "slashgreen", // "blockblue",
        "uncoveredGutterStyle": "slashred"
    },
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "gopls": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "deepCompletion": true,
        "staticcheck": true,
        "codelenses": {
            "gc_details": true,
        },
    },
    // git & gitlens
    "git.autofetch": false,
    "git.enableSmartCommit": true,
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
    },
    // yaml
    "yaml.schemas": {
        "kubernetes": "*.yaml"
    },
    "files.associations": {
        "*.yaml": "yaml"
    },
    // rest client
    "rest-client.enableTelemetry": false,
    // vs-kubernetes
    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "/home/gkarlik/.vs-kubernetes/tools/helm/linux-amd64/helm",
        "vs-kubernetes.draft-path": "/home/gkarlik/.vs-kubernetes/tools/draft/linux-amd64/draft",
        "vs-kubernetes.minikube-path": "/home/gkarlik/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vs-kubernetes.minikube-path.linux": "/home/gkarlik/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vscode-kubernetes.minikube-path.linux": "/home/gkarlik/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    // typescript
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.wasm": "default"
    },
    "go.toolsManagement.autoUpdate": true,
    "yaml.maxItemsComputed": 100,
    "redhat.telemetry.enabled": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "better-comments.tags": [
